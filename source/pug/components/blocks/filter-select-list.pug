mixin filter-select-list()
  -
    const list = [
      'По популярности', 'Новинки', 'Сначала дешевые', 'Сначала дорогие',
    ]

  .filter-select-list.custom-select(data-select="data-select" data-validate-type="select" data-name="filter-select-list")
    button.filter-select-list__button.custom-select__button(type="button" aria-label="Выберите одну из опций")
      span.filter-select-list__text.custom-select__text
      +icon('shevron-up', 14, 8)
    +filter-type({
      title: 'Популярные',
    })
    ul.filter-select-list__list.custom-select__list(role="listbox")
      each item in list
        li.filter-select-list__item.custom-select__item(tabindex="0" data-select-value= item aria-selected="true" role="option")= item
    button(type="button").filter-select-list__btn-show.btn Показать
