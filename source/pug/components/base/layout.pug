doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Дивайн Лайт — магазин освещения")

    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png">
    <link rel="manifest" href="favicon/site.webmanifest" crossorigin="use-credentials">
    <link rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    //- используйте только для шрифта находящегося на первом экране
    link(rel="preload", href="fonts/DIN-2014_Light.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/DIN-2014_Regular.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/DIN-2014_Demi.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite
    .wrapper(class=wrapperMods)
      if (hasHeader)
        case headerType
          when "light"
            +light-header(headerMods, currentUrl, lightHeaderOptions)
          default
            +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        case footerType
          when "light"
            +light-footer(footerMods, lightFooterOptions)
          default
            +footer(footerMods)

    block modals

    if (hasMap)
      script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=c04d7f9f-0b9a-46d2-b43b-551ce13fc4ce")

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
